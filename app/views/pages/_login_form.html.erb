<%= form_for(:user, url: user_session_path) do |f| %>
	<div class="row">
		<div class="">
			<div class="">
				<h3>Sign In</h3>
			</div>
			<div class="form-group">
				<%= f.text_field :email, autofocus: true, placeholder: "Email", required: true, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
			</div>
			<div>
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
			</div>
			<div>
				<%= f.submit "Sign in", class: "btn btn-primary" %>
			</div>
			<div>
				<h4><b>Dont have an account?</b></h4>
				<a data-toggle="modal" data-target="#signupModal" href="#">Sign up</a>
			</div>
		</div>
	</div>
<% end %>
